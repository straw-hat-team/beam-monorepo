{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Bug Fixes",
      "hidden": false
    }
  ],
  "packages": {
    "apps/trogon_commanded": {
      "component": "trogon_commanded"
    },
    "apps/one_piece_graceful_shutdown": {
      "component": "one_piece_graceful_shutdown"
    },
    "apps/trogon_result": {
      "component": "trogon_result"
    },
    "apps/trogon_error": {
      "component": "trogon_error"
    },
    "apps/trogon_typeprovider": {
      "component": "trogon_typeprovider"
    }
  },
  "plugins": [
    {
      "type": "sentence-case"
    }
  ],
  "tag-separator": "@",
  "include-v-in-tag": true,
  "include-component-in-tag": true,
  "release-type": "elixir",
  "draft": false,
  "draft-pull-request": false,
  "prerelease": false,
  "pull-request-header": "An automated release has been created for you.",
  "separate-pull-requests": true,
  "signoff": "Straw Hat, LLC <opensource@straw-hat-llc.com>"
}
